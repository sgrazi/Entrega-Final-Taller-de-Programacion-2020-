  <servlet>
      <servlet-name>comprobante</servlet-name>
      <servlet-class>modelo.comprobante</servlet-class>
  </servlet>
  
  <servlet>
      <servlet-name>Home</servlet-name>
      <servlet-class>controladores.Home</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>Login</servlet-name>
      <servlet-class>controladores.Login</servlet-class>
  </servlet>
  <servlet>
