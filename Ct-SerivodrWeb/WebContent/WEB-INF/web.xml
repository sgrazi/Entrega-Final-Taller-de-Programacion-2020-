      <servlet-class>controladores.Espectaculo</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>Funcion</servlet-name>
      <servlet-class>controladores.Funcion</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>Paquete</servlet-name>
      <servlet-class>controladores.Paquete</servlet-class>
  </servlet>
   <servlet>
      <servlet-name>ListarPorPlataformaCategoria</servlet-name>
      <servlet-class>controladores.ListarPorPlataformaCategoria</servlet-class>
  </servlet>
  
  <servlet-mapping>      
      <servlet-name>comprobante</servlet-name>
      <url-pattern>/PDF</url-pattern>
